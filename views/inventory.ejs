<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>Document</title>
</head>

<body>
  
    <nav>
        <h4>Node MySQL</h4>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Register</a></li>
        </ul>
    </nav>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                Inventory
            </div>
            <div class="card-body">
                <a href="/addItem" class="btn btn-primary">+ Add new</a>
                <br></br>
                <div>
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th scope="col">ID</th>
                          <th scope="col">Name</th>
                          <th scope="col">Cost</th>
                          <th scope="col">Present</th>
                          <th scope="col">Description</th>
                          <th scope="col">Edit</th>
                        </tr>
                      </thead>
                      <tbody>  
                        <% items.forEach(function (item) { %>
                           <tr>  
                               <td><%= item.id %></td>  
                               <td><%= item.item_name %></td>
                               <td><%= item.cost %></td>  
                               <td>
                                <form action="/auth/inventory" method="post">
                                  <input type="hidden" name ="item_id" value="<%= item.id%>">
                                  <label class="switch">
                                    <input type="checkbox" name="presence" value="present" onChange="this.form.submit()" <%= item.present ? 'checked' : '' %>>
                                    <span class="slider round"></span>
                                  </label>
                                </form>
                               </td>
                               <td>
                                <% for(const [key, val] of Object.entries(item.desc)){  %>
                                  <ul>
                                    <li><b><%=key%></b> : <%=val%></li>
                                  </ul>
                                <%} %>
                               </td>
                               <td><a href="/addItem" class="btn btn-primary">Edit</a></td>
                           </tr>                                   
                        <% }) %>
                        </tbody>
                    </table>
                  </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>

</body>

</html>